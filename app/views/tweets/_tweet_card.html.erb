<div class="card-full">
  <div class='card-full__image'>
    <%= link_to user_path(tweet.user) do %>
      <%= image_tag (tweet.user.avatar.attached? ? tweet.user.avatar : 'user.png') %>     
    <% end %>
  </div>
  <div class='card-full__body'>
    <div class='card-full__info'>          
      <%= link_to tweet.user.name, user_path(tweet.user) %>          
      <span>@<%= tweet.user.username %></span>
      <small><%= time_ago_in_words(tweet.created_at) %></small>
    </div>
    <p><%= tweet.body %></p>
    <div class="card-icons" >
      <div class="card-icons-left">
        <%= link_to tweet_path(tweet) do %>
          <%= image_tag 'reply.png', class: :ico %>
          <span><%= tweet.replies.count %></span>
        <% end %>
        <%= link_to (tweet) do %>
          <%= image_tag 'unlike.png', class: :ico %>
        <% end %>
      </div>
    <% if current_user && current_user.id == tweet.user_id %>
      <div class="card-icons-right">
        <%= link_to edit_tweet_path(tweet) do %>
          <%= image_tag 'edit.png', class: :ico %>
        <% end %>
        <%= link_to tweet_path(tweet), method: :delete, data: { confirm: 'Are you sure you want to delete this tweet ?' } do %>
          <%= image_tag 'delete.png', class: :ico %>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>