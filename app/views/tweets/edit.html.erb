_<h2 >Edit Tweet</h2>

<%= form_with model: @tweet, local: true, html: {class: :form} do |f| %>

  <% if @tweet.errors.any? %>
  <ul>
    <%= @tweet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
  <div >
    <%= f.label :body %><br />
    <%= f.text_area :body, autofocus: true, class: [:input_field, :input_field__hight] %>
  </div>

  <%= f.submit "Submit",{class: :button} %>
<% end %>

<%= link_to "Back", :back %>